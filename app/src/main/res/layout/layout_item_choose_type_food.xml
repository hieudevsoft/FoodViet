<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="68dp"
    android:layout_marginEnd="3dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:background="@drawable/custom_bgchoose_food"
        android:id="@+id/bg_ChooseType"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/tv_TypeChooseFood"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_margin="10dp"
            android:id="@+id/img_ChooseType"
            android:src="@drawable/chicken_food"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
    </LinearLayout>
    <TextView
        android:textAlignment="center"
        android:letterSpacing=".04"
        android:textSize="12sp"
        android:textColor="@color/colorDarkGray"
        android:fontFamily="@font/roboto"
        android:text="Vegetarian food"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bg_ChooseType"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/tv_TypeChooseFood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</androidx.constraintlayout.widget.ConstraintLayout>